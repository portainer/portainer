# EditorConfig helps developers define and maintain consistent coding styles between different editors and IDEs, and instructs github how to display code.
#
# http://editorconfig.org/

root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.{diff,md}]
trim_trailing_whitespace = false
insert_final_newline = false
